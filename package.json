{
	"name": "auto-assign-copilot-action",
	"version": "1.1.1",
	"description": "GitHub Action to automatically assign Copilot to issues based on priority labels",
	"main": "dist/index.js",
	"scripts": {
		"build": "ncc build src/index.js -o dist --license licenses.txt",
		"test": "jest",
		"cleanup-releases": "node scripts/cleanup-releases.js"
	},
	"keywords": [
		"github",
		"actions",
		"copilot",
		"automation",
		"issues"
	],
	"author": "mudman1986",
	"license": "MIT",
	"dependencies": {
		"@actions/core": "^2.0.2",
		"@actions/github": "^7.0.0"
	},
	"devDependencies": {
		"@vercel/ncc": "^0.38.3",
		"conventional-changelog-conventionalcommits": "^9.0.0",
		"jest": "^30.2.0",
		"semantic-release": "^25.0.2"
	},
	"overrides": {
		"tar": "^7.5.4",
		"glob": "^11.0.0",
		"undici": "^6.23.0",
		"test-exclude": "^7.0.1"
	},
	"jest": {
		"testEnvironment": "node",
		"testMatch": [
			"**/src/**/*.test.js"
		],
		"collectCoverageFrom": [
			"src/**/*.js",
			"!src/**/*.test.js",
			"!src/index.js"
		],
		"coverageThreshold": {
			"global": {
				"branches": 80,
				"functions": 75,
				"lines": 85,
				"statements": 85
			}
		},
		"setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
		"silent": true,
		"verbose": false
	},
	"standard": {
		"env": [
			"jest"
		],
		"ignore": [
			"dist/**",
			"node_modules/**",
			"coverage/**"
		]
	}
}
